<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_placeholder" />

    <TextView
        android:id="@+id/textBorrowerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/borrower_email_placeholder" />

    <TextView
        android:id="@+id/textFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faculty_placeholder" />

    <TextView
        android:id="@+id/textYearOfStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year_of_study_placeholder" />

    <!-- Add other TextViews for additional book information if needed -->
</LinearLayout>
